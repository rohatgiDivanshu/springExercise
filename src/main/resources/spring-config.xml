<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--using setter method Question1-->
    <bean id="database" class="com.ttn.spring.session.Database">
        <property name="port" value="3306"/>
        <property name="name" value="mysql"/>
    </bean>

<!--list,set and map-->
    <bean name="complexBean" class="com.ttn.spring.session.Complex">
        <property name="list">
            <list>
                <value>1</value>
                <value>4</value>
                <value>2</value>
                <value>3</value>
                <value>5</value>
            </list>
        </property>


        <property name="set">
            <set>
                <value>1</value>
                <value>4</value>
                <value>2</value>
                <value>2</value>
                <value>5</value>
            </set>
        </property>

        <property name="map">
            <map>
                <entry key="1" value="spring"/>
                <entry key="3" value="rohatgi"/>
                <entry key="" value="divanshu"/>
            </map>
        </property>

    </bean>

<!--Configuring tea and expressTea in xml file-->
    <bean id="tea" class="com.ttn.spring.session.Tea"/>
    <bean id="expressTea" class="com.ttn.spring.session.ExpressTea"/>

    <bean id="restaurant" class="com.ttn.spring.session.Restaurant">
        <property name="hotDrink" ref="tea"/>
    </bean>

    <bean id="teaRestaurant" class="com.ttn.spring.session.Restaurant" scope="prototype">
        <property name="hotDrink" ref="tea"/>
    </bean>

    <bean id="expressTeaRestaurant" class="com.ttn.spring.session.Restaurant">
        <!--<property name="hotDrink" ref="expressTea"/>-->
        <property name="hotDrink">
            <bean id="expressTea" class="com.ttn.spring.session.ExpressTea"/>
        </property>
    </bean>


    <bean
            class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"/>

    <bean
            class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>


</beans>